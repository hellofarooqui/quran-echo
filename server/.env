# .env.example
# Copy this file to .env and fill in your actual values

# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/audiobook_app
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/audiobook_app

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRE=7d

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET_NAME=your-audiobook-bucket

# Admin Credentials (for initial admin user)
ADMIN_EMAIL=admin@audiobooks.com
ADMIN_PASSWORD=Admin@123

# File Upload Configuration
MAX_FILE_SIZE=524288000
# 500MB in bytes (524288000)